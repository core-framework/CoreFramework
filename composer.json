{
    "name": "core-framework/core-framework",
    "description": "Core PHP Framework",
    "replace": {"shalomsam/Core": "self.version"},
    "type": "project",
    "license": "MIT",
    "keywords": [
        "php",
        "framework",
        "Core",
        "Core PHP Framework"
    ],
    "autoload": {
        "psr-4": {"Core\\": "src/Core"}
    },
    "prefer-stable": true,
    "require": {
        "smarty/smarty": "3.1.19",
        "php": ">=5.4.0",
        "pear/console_table": "^1.2",
        "robmorgan/phinx": "^0.4.6"
    },
    "require-dev": {
        "filp/whoops": "1.*",
        "phpunit/phpunit": "4.3",
        "phpunit/DbUnit": "1.3.1"
    },
    "suggest": {
        "ext-apc": "Allows for faster performance of Core Framework through APC caching",
        "ext-opcache": "Allows for faster performance of Core Framework through opCache(Zend Optimizer+) caching. opCache requires php 5.5+"
    },
    "authors": [
        {
            "name": "Shalom Sam",
            "email": "shalom.s@coreframework.in"
        }
    ],
    "scripts": {
        "post-install-cmd": [

        ],
        "post-update-cmd": [

        ]
    }
}
